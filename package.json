{
  "name": "iobroker.sonnen-charger",
  "version": "1.2.1",
  "description": "Integration of sonnenCharger into ioBroker",
  "author": {
    "name": "ChrisWbb",
    "email": "development@chrweber.de"
  },
  "homepage": "https://github.com/ChrisWbb/ioBroker.sonnen-charger",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "sonnen",
    "charger",
    "wallbox"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:ChrisWbb/ioBroker.sonnen-charger.git"
  },
  "engines": {
    "node": ">= 18"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.2.3",
    "jsmodbus": "^4.0.10",
    "serialport": "^12.0.0"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.2",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@alcalzone/release-script-plugin-manual-review": "^3.7.0",
    "@iobroker/adapter-dev": "^1.0.1",
    "@iobroker/testing": "^4.1.3",
    "@tsconfig/node18": "^18.2.4",
    "@types/chai": "^5.0.1",
    "@types/chai-as-promised": "^8.0.1",
    "@types/mocha": "^10.0.8",
    "@types/node": "^20.14.9",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^3.2.12",
    "@typescript-eslint/eslint-plugin": "^7.5.1",
    "@typescript-eslint/parser": "^7.14.1",
    "chai": "^5.1.2",
    "chai-as-promised": "^7.1.2",
    "eslint": "^8.57.0",
    "mocha": "^10.7.3",
    "proxyquire": "^2.1.3",
    "rimraf": "^5.0.7",
    "sinon": "^19.0.2",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "~5.5.2"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf build",
    "build": "build-adapter ts",
    "watch": "build-adapter ts --watch",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "lint": "eslint --ext .ts src/",
    "translate": "translate-adapter",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/ChrisWbb/ioBroker.sonnen-charger/issues"
  },
  "readmeFilename": "README.md"
}
